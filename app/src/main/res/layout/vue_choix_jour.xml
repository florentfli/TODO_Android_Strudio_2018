<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.ChoixJour">

    <TextView
        android:id="@+id/textView_choix_jour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Page choix jour" />

    <DatePicker
        android:id="@+id/simpleDatePicker"
        android:calendarViewShown="false"
        android:layout_width="2000dp"
        android:layout_height="1700px"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:calendarTextColor="#424242"
        android:layout_below="@id/textView_choix_jour"
        android:headerBackground="#424242"
        android:dayOfWeekBackground="#1565C0"
        android:yearListSelectorColor="#424242"
        android:datePickerMode="calendar"/>

    <Button
        android:id="@+id/action_enregistrer_jour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Enregistrer"/>

</RelativeLayout>