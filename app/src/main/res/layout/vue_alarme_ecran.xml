<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.AlarmeEcran">

    <TextView
        android:id="@+id/texte_alarme_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="30dp"
        android:text="ALARME :" />
    <TextView
        android:id="@+id/texte_alarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/texte_alarme_titre"
        android:textSize="20dp"
        android:text="C'est l'heure de pecher un(e) " />

    <TextView
        android:id="@+id/texte_alarme_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_below="@id/texte_alarme"
        android:paddingTop="120dp"
        android:textSize="15dp"
        android:text="Avez vous pris votre poisson aujourd'hui ?" />

    <CheckBox
        android:id="@+id/checkBox_alarme_ecran_deja_pecher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:buttonTint="#1565C0"
        android:layout_below="@+id/texte_alarme_question"
        android:text=" capturer ?" />

    <Button
        android:id="@+id/action_replanifier"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/checkBox_alarme_ecran_deja_pecher"
        android:text="Replanifier" />

    <Button
        android:id="@+id/button_alarme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Retour acceuil" />

</RelativeLayout>